{
    "name": "lucylang",
    "displayName": "Lucy Language",
    "description": "Syntax highlighting for lucy",
    "version": "0.0.12",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/matthewp/lucy-vscode.git"
    },
    "publisher": "lucylang2",
    "contributes": {
        "languages": [
            {
                "id": "lucy",
                "aliases": [
                    "Lucy",
                    "lucy"
                ],
                "extensions": [
                    ".lucy"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lucy",
                "scopeName": "source.lucy",
                "path": "./syntaxes/lucy.tmLanguage.json"
            },
            {
                "scopeName": "markdown.lucy.codeblock",
                "path": "./syntaxes/codeblock.json",
                "injectTo": [
                    "text.html.markdown"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.lucy": "lucy"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lucy",
                "path": "./syntaxes/inline-lucy.json",
                "embeddedLanguages": {
                    "source.lucy": "lucy"
                }
            }
        ]
    }
}
